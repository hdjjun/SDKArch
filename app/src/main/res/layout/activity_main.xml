<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/log_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_register"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_log" />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:text="register"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/log_area"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_getloc"
        android:text="get location"
        app:layout_constraintLeft_toLeftOf="@id/btn_register"
        app:layout_constraintRight_toRightOf="@id/btn_register"
        app:layout_constraintTop_toBottomOf="@id/btn_register"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_getloc_async"
        android:text="get location Async"
        app:layout_constraintLeft_toLeftOf="@id/btn_register"
        app:layout_constraintRight_toRightOf="@id/btn_register"
        app:layout_constraintTop_toBottomOf="@id/btn_getloc"/>

</androidx.constraintlayout.widget.ConstraintLayout>